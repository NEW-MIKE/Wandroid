<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="vo"
                type="io.github.kaya.wandroid.vo.xxmh.XChapter" />

        <variable
                name="chapterIndex"
                type="java.lang.Integer" />
    </data>

    <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            tools:background="@color/bg_dark">

        <ImageView
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_marginTop="4dp"
                android:scaleType="fitXY"
                app:h="@{150}"
                app:radius="@{2}"
                app:url="@{vo.coverUrl}"
                tools:src="@mipmap/ic_launcher" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="2dp"
                    android:tint="@color/chapter_read_color"
                    app:gone="@{vo.sequence!=chapterIndex}"
                    app:srcCompat="@drawable/ic_location" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@{vo.title}"
                    android:textColor="@color/chapter_text_color"
                    android:textSize="14dp"
                    app:select="@{vo.sequence == chapterIndex}"
                    tools:text="七公主" />
        </LinearLayout>


    </LinearLayout>
</layout>