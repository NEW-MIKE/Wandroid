<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="vo"
                type="io.github.kaya.wandroid.vo.ArticleVO"/>
    </data>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:background="#3f3f3f"
            android:layout_height="wrap_content">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:html="@{vo.fixedTitle}"
                    android:textSize="16dp"
                    android:textColor="@color/article_title_color"
                    tools:text="     test"
                    app:select="@{vo.read}"
                    />

            <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_logo_csdn"
                    android:layout_marginTop="4dp"
                    app:imageId="@{vo.icon}"
                    />
        </FrameLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{vo.author}"
                    android:textColor="@color/text_color"
                    android:textSize="14sp"
                    tools:text="username"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="@{vo.superChapterName}"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textSize="12sp"
                    android:textColor="@color/text_color"
                    tools:text="tag1"
                    app:gone="@{vo.superEmpty}"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_tag"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="@{vo.chapterName}"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:textColor="@color/text_color"
                    android:paddingRight="8dp"
                    android:layout_marginLeft="10dp"
                    tools:text="tag2"
                    android:background="@drawable/bg_tag"
                    android:textSize="12sp"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    tools:text="今天"
                    android:textSize="14sp"
                    android:textColor="@color/text_color"
                    />
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#2f2f2f"
                android:layout_marginTop="10dp"
                />
    </LinearLayout>
</layout>